{
  "add color": {
    "prefix": "cc",
    "body": [
      "color('$1');"
    ],
    "description": "Add color variables"
  },
  "add media": {
    "prefix": "media",
    "body": [
      "@media (${1|max,min|}-width: ${2|$bpS,$bpM,$bpL|}) {",
      "\t$0",
      "}"
    ],
    "description": "Add media queries"
  },
  "transition": {
    "prefix": "trans",
    "body": [
      "transition: $1 $$duration $$timing;",
      "$2"
    ],
    "description": "Add Transition shorthand"
  }
}